    "babel-preset-es2017": "^6.24.1",
    "babelify": "^7.3.0",
    "compression-webpack-plugin": "^1.1.3",
    "cross-env": "^5.1.3",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1",
    "mocha-loader": "^1.1.3",
    "mocha-webpack": "^1.0.1",
    "mochawesome": "^2.3.1",
