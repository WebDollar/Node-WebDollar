    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "utf-8-validate": "^3.0.4",
    "uuid": "^3.1.0",
    "webworkify": "^1.5.0",
    "wrtc": "0.0.62"
  },
